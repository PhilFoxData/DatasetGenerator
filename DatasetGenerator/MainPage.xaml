<Page
    x:Class="DatasetGenerator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DatasetGenerator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <NavigationView ItemInvoked="NavigationView_ItemInvoked" x:Name="Nv_Main" IsBackButtonVisible="Collapsed">
        <NavigationView.MenuItems>
            <NavigationViewItem Content="Home" Icon="Home" Tag="Nvi_Home" IsSelected="True"/>
            <NavigationViewItem Content="Neue Daten generieren" Icon="Add" Tag="Nvi_Generate"/>
            <NavigationViewItem Content="Datensätze managen" Icon="Library" Tag="Nvi_Manage"/>
        </NavigationView.MenuItems>
        <Frame x:Name="Frm_Content"/>
    </NavigationView>
</Page>
