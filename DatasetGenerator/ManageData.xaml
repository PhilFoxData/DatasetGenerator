<Page
    x:Class="DatasetGenerator.ManageData"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DatasetGenerator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    Loaded="Page_Loaded">

    <StackPanel>
        <CommandBar>
            <AppBarButton Icon="Add" Label="Add"/>
            <AppBarButton Icon="Send" Label="Export"/>
        </CommandBar>

        <TextBlock Margin="10,10,0,10" Text="Datensätze" FontSize="20"/>
        <ListView x:Name="Lsv_Datasets" MinHeight="300" SelectionChanged="Lsv_Datasets_SelectionChanged" Width="300"
                  HorizontalAlignment="Left" Margin="10,0,0,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ListViewItem Content="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Content="Neuen Datensatz anlegen" Click="Cmd_NewDataset_Click" Margin="10,20,0,0"/>
        <Button Content="Daten aus Datensatz exportieren" Click="Cmd_Export_Click" Margin="10,20,0,0" IsEnabled="False"
                x:Name="Cmd_Export"/>
    </StackPanel>
</Page>
